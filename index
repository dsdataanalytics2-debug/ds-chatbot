import pandas as pd

# CSV ржлрж╛ржЗрж▓ рж▓рзЛржб ржХрж░рзЛ
df = pd.read_csv("medicine_data.csv")

def chatbot_reply(user_input):
    matches = df[df['MedicineName'].str.lower().str.contains(user_input.lower())]
    
    if matches.empty:
        return "ржжрзБржГржЦрж┐ржд, ржЖржкржирж╛рж░ ржЦрзЛржБржЬрж╛ ржУрж╖рзБржз ржЖржорж╛ржжрзЗрж░ ржбрж╛ржЯрж╛ржмрзЗрж╕рзЗ ржирзЗржЗред"
    
    response = ""
    for _, row in matches.iterrows():
        response += "\n--- Medicine Information ---\n"
        for col in df.columns:
            response += f"{col}: {row[col]}\n"
    return response.strip()

print("ЁЯТК Medicine Chatbot рж╢рзБрж░рзБ рж╣рж▓рзЛ (exit рж▓рж┐ржЦрзЗ ржмрзЗрж░ рж╣рждрзЗ ржкрж╛рж░рзЗржи) ЁЯТК\n")
while True:
    user_msg = input("ржЖржкржирж┐: ")
    if user_msg.lower() == "exit":
        print("ржЪрзНржпрж╛ржЯ рж╢рзЗрж╖ рж╣рж▓рзЛред ржзржирзНржпржмрж╛ржжред")
        break
    bot_response = chatbot_reply(user_msg)
    print(bot_response)
